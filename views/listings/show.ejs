<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8">
      <h3><%= listing.title %></h3>
      <div class="card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="listing image"
        />
        <!-- <div class="card-body">
    <p class="card-text"><%= listing.title %></p> 
  </div> -->
      </div>
      <p>
        <!-- <%= listing.title %><br /> -->
        <%= listing.description %><br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %><br />
        <%= listing.location %><br />
        <%= listing.country %>
      </p>
      <br />
      <div class="row showBTN">
        <div class="col-3">
          <button
            class="btn btn-dark"
            onclick="location.href='/Listings/<%= listing._id %>/edit'"
          >
            Edit this listing
          </button>
        </div>
        <div class="col-3">
          <button class="btn btn-dark" onclick="location.href='/Listings'">
            Back to all Listings
          </button>
        </div>
        <div class="col-2">
          <form
            method="POST"
            action="/Listings/<%= listing._id %>?_method=DELETE"
          >
            <button type="submit" class="btn btn-danger">Delete Listing</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
