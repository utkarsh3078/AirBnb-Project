<% layout("Layouts/boilerplate") %>  <!--This line is used to include the boilerplate layout file in this file -->
<div class="row mt-3">
    <div class="row-8 offset-2">
        <h3>Listings Details</h3>
    </div>
        <div class="card col-6 offset-2 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
            <p class="card-text">
                <b><%=listing.title%></b>       <br>
                <%=listing.description%>        <br>
                &#8377; <%= listing.price.toLocaleString("en-IN")%>   <br>
                <%=listing.location%>       <br>
                <%=listing.country%>
            </p>
        </div>
        </div>
        <br>
</div>
<div class="btns">
    <a href="/Listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-2 ">Edit</a> <br><br>
    <form method="POST" action="/Listings/<%= listing._id%>?_method=DELETE">  <!--Method-Override is used here -->
        <button class="btn btn-dark col-1 offset-2">Delete</button>
    </form>
</div>
