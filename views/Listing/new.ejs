<% layout("Layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br><br>
    <h2>Create a new Listing</h2>
    <form method="POST" action="/Listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter Title here" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter Description here" class="form-control" required></textarea>
            <div class="valid-feedback">Description looks good</div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="Enter Image URL/link here" type="text" class="form-control">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter Price here" class="form-control" required>
                <div class="valid-feedback">Price looks good</div>
            </div>
            
            <div class="mb-3 col-8">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location here" type="text" class="form-control" required>
                <div class="valid-feedback">Location looks good</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter Country here" type="text" class="form-control" required>
            <div class="valid-feedback">Country looks good</div>
        </div>
    
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
</div>
</div>